Xft.dpi:        96
Xft.antialias:  true
Xft.rgba:       rgb
Xft.hinting:    true
Xft.hintstyle:  hintslight

*faceName: Hack
*faceSice: 12
! Rofi
rofi.color-enabled: true
rofi.font: Hack Bold 12
rofi.modi: window,run,ssh
rofi.opacity: 90
rofi.color-window: #282c34, #282c34, #abb2bf
rofi.color-normal: #282c34, #abb2bf, #353942, #268bd2, #282c34
rofi.color-active: #282c34, #abb2bf, #282c34, #c678dd, #282c34
rofi.color-urgent: #282c34, #abb2bf, #282c34, #268bd2, #ffffff

rofi.kb-remove-to-eol: Control+Shift+k
rofi.kb-accept-entry: Control+m,Return,KP_Enter
rofi.kb-row-up: Up,Control+p,Shift+Tab,Shift+ISO_Left_Tab,Control+k
rofi.kb-row-down: Down,Control+n,Control+j

rofi.terminal:          /usr/bin/zsh
rofi.run-shell-command: /usr/bin/zsh -c -i '{cmd}'
rofi.ssh-command:       {terminal} -c -i "{ssh-client} {host}"
! URxvt

URxvt.termName:           rxvt-unicode-256color
! *customization:           -color
URxvt.title:              Terminal
Urxvt.loginShell:         true

URxvt*geometry:           150x40
URxvt*visualBell:         false
URxvt*urgentOnBell:       true
URxvt*scrollBar:          false
URxvt*internalBorder:     0

URxvt.depth:              32

! Fonts
URxvt.font:           xft:Hack:size=10

URxvt*colorBD:            #ffffff
URxvt*cursorColor:                    #d1d4e0
URxvt*scrollColor:                    #d1d4e0
URxvt*highlightColor:                 #252936
URxvt*highlightTextColor:             #C0C5CE
URxvt.xftAntialias:       true

! urxvt will force a screen refresh on each new line it received
URxvt*jumpScroll:         false

! Remove ! if lines disappear
! URxvt*skipScroll:         false

URxvt*saveLines:          10000

! Match URLs
! urlLauncher (ubuntu) url-launcher (archlinux)
URxvt*perl-ext-common:    default,matcher
urxvt*url-launcher:       /usr/bin/google-chrome
URxvt*underlinedURLs:     true
URxvt*matcher.button:     1
URxvt*matcher.pattern.1:  \\bwww\\.[\\w-]+\\.[\\w./?&@#-]*[\\w/-]
! Dont select special chars
URxvt.cutchars:           "`()'*[]{|}"

! Disable Keycap Picture Insert and ISO-14755 Mode. Trigger by Ctrl-Shift
! https://bitbucket.org/sme/dotfiles/src/0b4387472283/.Xdefaults
URxvt.iso14755_52:        false
URxvt.iso14755:           false

